<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfostatActivity" >

    <Button
        android:id="@+id/Button_Info"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:onClick="GetBtnInfo"
        android:text="Informations"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/Button_Stat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="GetBtnStat"
        android:paddingLeft="0dp"
        android:text="Statistiques"
        app:layout_constraintBottom_toBottomOf="@+id/Button_Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/Button_Info"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />

    <FrameLayout
        android:id="@+id/fragment_interchangeable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Info" />

    <Button
        android:id="@+id/button_Play"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:onClick="GetBtnPlay"
        android:text="Jouer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
 />
</android.support.constraint.ConstraintLayout >
